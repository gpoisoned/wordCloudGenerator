<div class="row">
  <div class="col-lg-12">
    <div id="wordCloud" style="min-height:500px; min-width:900px;"></div>
  </div>
</div>

<script type="text/javascript">
  // If jquery is loaded, create word cloud
  // This is just a basic word cloud, for more info visit http://mistic100.github.io/jQCloud/
  $( document ).ready(function() {
    $('#wordCloud').jQCloud(<%= keywords %>);
  });
</script>
